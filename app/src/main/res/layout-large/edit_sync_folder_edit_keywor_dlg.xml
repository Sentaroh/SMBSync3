<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/edit_sync_folder_edit_keywor_dlg_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/edit_sync_folder_edit_keywor_dlg_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/edit_sync_folder_edit_keywor_dlg_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        <requestFocus />

        <ImageButton
                android:id="@+id/edit_sync_folder_edit_keywor_dlg_help"
                android:layout_width="43dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_128_help" />

    </LinearLayout>
    <include layout="@layout/divider_line1_turquoise" />

    <TextView
            android:id="@+id/edit_sync_folder_edit_keywor_dlg_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffff0000" />

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fadeScrollbars="false" >

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                <LinearLayout
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    <com.sentaroh.android.Utilities3.Widget.NonWordwrapTextView
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_taken_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msgs_sync_folder_archive_add_taken_date_button"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_date"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_time"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_day_of_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_day_of_year"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_yyyy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_yyyy"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_yy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_yy"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_mm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_mm"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_dd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_dd"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_hh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_hh"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_min"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_sec"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_week_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_week_number"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_week_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_week_day"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_taken_week_day_long"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_week_day_long"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    <com.sentaroh.android.Utilities3.Widget.NonWordwrapTextView
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_exec_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msgs_sync_folder_archive_add_sync_begin_date_button"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_date"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_time"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_day_of_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_day_of_year"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_yyyy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_yyyy"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_yy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_yy"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_mm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_mm"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_dd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_dd"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_hh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_hh"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_min"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_sec"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_week_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_week_number"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_week_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_week_day"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                        <Button
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_exec_week_day_long"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/msgs_sync_folder_archive_btn_title_week_day_long"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_file_name_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/msgs_sync_folder_archive_add_original_file_name_button"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        <Button
                                android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_org_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/msgs_task_sync_task_edit_keyword_label_original_name"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/msgs_sync_folder_archive_add_constants_button"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <Button
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_const_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                <Button
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_const_underbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="_"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                <Button
                        android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_const_slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="/"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <EditText
            android:id="@+id/edit_sync_folder_edit_keywor_dlg_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Directory or File name"
            android:inputType="textMultiLine|text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="New Name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    <com.sentaroh.android.Utilities3.Widget.NonWordwrapTextView
            android:id="@+id/edit_sync_folder_edit_keywor_dlg_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:text="/storage/emulated/0/DCIM"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <Button
                android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/msgs_common_dialog_cancel" />

        <Button
                android:id="@+id/edit_sync_folder_edit_keywor_dlg_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/msgs_common_dialog_save" />

    </LinearLayout>

</LinearLayout>