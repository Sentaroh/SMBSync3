<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_sync_folder_dlg_zip_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded" >

    <LinearLayout
            android:id="@+id/edit_sync_folder_dlg_zip_local_storage_selector_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_task_edit_sync_folder_dlg_local_storage"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="RtlHardcoded" />
        <Spinner
            android:id="@+id/edit_sync_folder_dlg_zip_storage_selector"
            style="?android:attr/spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:minHeight="36dp"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="RtlSymmetry,RtlHardcoded" />
        <Button
            android:id="@+id/edit_sync_folder_dlg_zip_local_storage_request_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/msgs_main_external_storage_request_permission"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_sync_folder_dlg_zip_file_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit_sync_folder_dlg_zip_filelist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:text="@string/msgs_task_edit_sync_folder_dlg_zip_filelist"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities3.Widget.NonWordwrapTextView
            android:id="@+id/edit_sync_folder_dlg_zip_dir_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:hint="Directory"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_sync_folder_dlg_zip_dir_keyword_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <Button
            android:id="@+id/edit_sync_folder_dlg_edit_zip_dir_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msgs_task_sync_task_edit_file_name_keyword"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_sync_folder_dlg_zip_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/msgs_task_edit_sync_folder_dlg_zip_filename"
        android:inputType="text|textMultiLine"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="@string/msgs_task_edit_sync_folder_dlg_zip_comp_level_title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/edit_sync_folder_dlg_zip_comp_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:paddingLeft="5dp"
            android:layout_gravity="clip_vertical"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/msgs_task_edit_sync_folder_dlg_zip_encrypt_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/edit_sync_folder_dlg_zip_enc_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:minHeight="36dp"
        android:paddingLeft="5dp"
        android:layout_gravity="clip_vertical"
        android:layout_marginLeft="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/edit_sync_folder_dlg_zip_enc_password_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <CheckedTextView
                android:id="@+id/edit_sync_folder_dlg_ctv_show_zip_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="center_vertical"
                android:text="@string/msgs_task_edit_sync_folder_dlg_show_password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="RtlHardcoded" />
            <LinearLayout
                android:id="@+id/edit_sync_folder_dlg_zip_enc_password_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msgs_task_edit_sync_folder_dlg_zip_title_zip_password"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/edit_sync_folder_dlg_zip_enc_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit_sync_folder_dlg_zip_enc_confirm_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/msgs_task_edit_sync_folder_dlg_zip_title_zip_confirm_password"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
                    android:id="@+id/edit_sync_folder_dlg_zip_enc_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>